<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/transparent_black"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Event Name"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/image"/>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Sat 2016 : 2:13Pm"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textColor="#FF4A4A4A"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/event_name"/>

    <ImageView
        android:id="@+id/driving_distance"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_local_mile_away"
        app:layout_constraintTop_toBottomOf="@+id/event_time"
        tools:layout_editor_absoluteX="16dp"/>

    <TextView
        android:id="@+id/driving_distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.83 mi"
        android:textSize="16sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_time"
        app:layout_constraintLeft_toRightOf="@+id/driving_distance"/>

    <ImageView
        android:id="@+id/mile_away"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_directions_car"
        app:layout_constraintTop_toBottomOf="@+id/event_time"
        app:layout_constraintLeft_toRightOf="@+id/driving_distance_label"/>

    <TextView
        android:id="@+id/mile_away_label"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="1hr 30min"
        android:textSize="16sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_time"
        app:layout_constraintLeft_toRightOf="@+id/mile_away"/>

    <ImageView
        android:layout_width="52dp"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@+id/event_name"
        android:background="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"/>

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF9B9B9B"
        app:layout_constraintTop_toBottomOf="@+id/mile_away_label"/>

</android.support.constraint.ConstraintLayout>